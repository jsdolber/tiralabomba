- error = @contact.errors.include?(:email)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :email, :class => 'control-label'
  .controls
    =f.text_field :email, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:email, :class => 'text-error') : pat(:example)
- error = @contact.errors.include?(:content)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :content, :class => 'control-label'
  .controls
    =f.text_field :content, :class => 'form-control input-large input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:content, :class => 'text-error') : pat(:example)

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:contacts, :index), :class => 'btn btn-default'