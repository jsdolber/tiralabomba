%div
	.row.tweet
		.col-md-1.avatar
			%img{:src => '/assets/bred_small.jpg' }
		.col-md-11.tweet
			%span.tweet-text
				= tweet.text
			.label.label-default
				= time_ago_in_words(tweet.created_at || Time.now)
			%a.link-to-tweet{:href => tweet.url.to_s, :target => '_blank'}
				%i.glyphicon.glyphicon-share-alt
	.row.tweet-hr
		%hr
